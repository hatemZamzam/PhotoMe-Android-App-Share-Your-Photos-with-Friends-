<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp">

        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
            android:id="@+id/chatTxt" tools:ignore="LabelFor"/>
        <Button
            android:text="Send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" android:id="@+id/sendBtn" android:onClick="sendMessage"
            tools:ignore="HardcodedText"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/chatTxt" android:layout_alignParentStart="true"
            android:id="@+id/msgsListView"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>