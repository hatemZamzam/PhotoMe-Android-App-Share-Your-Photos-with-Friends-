<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="392dp"
        android:layout_height="584dp"
        android:layout_margin="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" tools:layout_editor_absoluteY="13dp"
        android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="60dp" android:id="@+id/navGridLayoutU" android:layout_marginTop="7dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/usersBtnU"
                android:onClick="navToUsers" app:layout_row="0" app:layout_column="0" app:layout_gravity="fill"
                app:layout_columnWeight="1" app:layout_rowWeight="1" android:background="@drawable/users"
                android:layout_marginLeft="5dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/button11U" app:layout_row="0"
                app:layout_column="1" app:layout_gravity="fill" app:layout_columnWeight="1"
                app:layout_rowWeight="1" android:onClick="toFeeds" android:background="@drawable/feeds"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/button10U" app:layout_row="0"
                app:layout_column="2" app:layout_gravity="fill" app:layout_columnWeight="1"
                app:layout_rowWeight="1" android:background="@drawable/fav"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/button9U" app:layout_row="0"
                app:layout_column="3" app:layout_gravity="fill" app:layout_columnWeight="1"
                app:layout_rowWeight="1" android:background="@drawable/prof"/>
        </GridLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/userList"
            tools:layout_editor_absoluteY="8dp" android:layout_below="@+id/navGridLayoutU"
            tools:layout_editor_absoluteX="8dp" android:layout_marginTop="15dp" android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" android:background="@android:color/white"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>