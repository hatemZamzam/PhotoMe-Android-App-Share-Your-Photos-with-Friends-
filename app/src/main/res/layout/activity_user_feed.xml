<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout android:layout_width="368dp" android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp" tools:ignore="MissingConstraints" android:id="@+id/relLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp" android:id="@+id/linearLayoutInfo" tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">
            <Button
                android:text="Follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/followBtn" android:layout_weight="1"
                android:background="@android:color/holo_blue_light" android:textColor="@android:color/white"
                android:textSize="24sp" android:onClick="followOrUnfollow"/>
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/gridLay1"
            android:layout_below="@+id/linearLayoutInfo">

        </GridLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>